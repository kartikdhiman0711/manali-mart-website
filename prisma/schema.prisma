generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlserver"
  url      = env("DATABASE_URL")
}

model Product {
  id                   String @id @default(cuid())
  name                 String
  price                String
  originalPrice        String
  category             String
  subcategory          String
  image                String
  description          String
  detailedDescription  String
  brand                String
  weight               String
  ingredients          String
  
  @@unique([name, weight])
}
